@import 'nib'
global-reset()


*
*::after
*::before
	box-sizing border-box
	transform translateZ(0)
	transition  0.25 all ease
	&:hover
	&:active
	&:focus
		transition  0.25 all ease
html
body
	height 100%
	width 100%
	font-family sans-serif
	overflow-x hidden
	max-width 100vw
body

img
	object-fit contain
	max-width 100%
body
	display flex
	justify-content center
	align-items center
	background url(../resources/bg.jpg)
	cursor url(http://cur.cursors-4u.net/toons/too-4/too343.cur), default !important
.jump
	font-size 3rem
	font-family 'Ultra', serif
	font-weight 400
	color #eae70a
	text-transform uppercase
	text-shadow 0px 0px 15px #031529
	span
		display inline-block
		transition transform 0.2s
		cursor url(http://cur.cursors-4u.net/toons/too-4/too344.cur), default !important
		&:hover
			transform translateY(-20px) rotate(10deg) scale(2)
